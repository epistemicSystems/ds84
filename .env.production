# Production Environment Configuration
# DO NOT COMMIT THIS FILE WITH ACTUAL SECRETS
# Use AWS Secrets Manager, Parameter Store, or environment variables in production

# Application
APP_NAME=Realtor AI Copilot
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (use environment variables or secrets manager in production)
DATABASE_URL=postgresql://user:password@rds-instance.region.rds.amazonaws.com:5432/realtor_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (optional, for distributed caching)
REDIS_URL=redis://redis-cluster.region.cache.amazonaws.com:6379/0

# OpenAI API (use AWS Secrets Manager)
OPENAI_API_KEY=${OPENAI_API_KEY}

# API Keys
# In production, manage API keys through the API key management system
# Initial admin key should be rotated after first use
ADMIN_API_KEY=${ADMIN_API_KEY}

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_REQUESTS_PER_HOUR=5000
RATE_LIMIT_REQUESTS_PER_DAY=50000

# Caching
CACHE_EMBEDDING_SIZE=50000
CACHE_PROMPT_SIZE=5000
CACHE_QUERY_SIZE=25000
CACHE_DEFAULT_TTL=3600

# Input Validation
INPUT_MAX_REQUEST_SIZE_MB=10.0
INPUT_MAX_STRING_LENGTH=100000
INPUT_ENABLE_SQL_INJECTION_CHECK=true
INPUT_ENABLE_XSS_CHECK=true
INPUT_ENABLE_COMMAND_INJECTION_CHECK=true

# CORS
CORS_ALLOWED_ORIGINS=https://app.example.com,https://www.example.com
CORS_ALLOW_CREDENTIALS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# Security
SECRET_KEY=${SECRET_KEY}
ALLOWED_HOSTS=api.example.com,*.example.com

# AWS (for deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=${AWS_ACCOUNT_ID}

# Feature Flags
ENABLE_AB_TESTING=true
ENABLE_FEEDBACK_LEARNING=true
ENABLE_META_COGNITIVE=true
ENABLE_CACHING=true
